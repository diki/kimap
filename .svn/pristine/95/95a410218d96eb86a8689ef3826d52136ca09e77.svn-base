@{
    ViewBag.Title = "Index";
    Layout = "../Shared/_Layout.cshtml";
}

<link href='http://fonts.googleapis.com/css?family=Just+Me+Again+Down+Here' rel='stylesheet' type='text/css'>
<section style="margin-top:8px;">
	<div style="height: 16px">
	</div>
	<div class="row" style="-moz-box-shadow:0px 8px 12px 1px #ddd; -webkit-box-shadow: 0px 8px 12px 1px #ddd; box-shadow:0px 8px 12px 1px #ddd; 
	    margin-left:auto; margin-right: auto; width: 88%; background:#fff; padding:16px; 
	    -webkit-border-radius: 8px; -moz-border-radius: 8px; border-radius: 8px;">
		<div class="span5 columns" style="color: #252626; font-size: 21px;">
			<h1 class="hero-unit-m">Ev işlerinizi yaptırmanın en kolay yolu</h1>
			<div class="" style="padding-left: 2px; padding-top: 60px;">
				<!-- <a class="btn btn-primary btn-large" href="#">Primary</a> -->
				@*<button class="form-submit-button-push_red">Bir işiniz mi var</button>*@
                <div style="display: inline-block; font-family: 'Just Me Again Down Here', cursive;font-size: 36px;margin-left:96px;text-shadow: 0px 0px 1px #000;">
                    <div>şimdi deneyin</div>
                    <img style="margin-top: 16px; margin-left:90px;" src="../../Content/img/arrow.png"/>
                </div>
                <a href="" id="start_selling" class="textfill mmPopup tC mlr-auto rnd-5" style="margin-top: -57px; margin-left: 55%; 
                    -moz-box-shadow: 2px 2px 5px #5f5f5f;-webkit-box-shadow: 2px 2px 5px #5f5f5f;box-shadow: 2px 2px 5px #5f5f5f;
                    background:-moz-linear-gradient(top, #F1433F, #FF2B20);
                    background:-webkit-gradient(linear, left top, left bottom, from(#F1433F), to(#FF2B20));
                    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#F1433F', endColorstr='#FF2B20');
                    height:36px;padding:10px;">
                <span class="" style="text-shadow: 0px 0px 1px white; line-height: 36px; font-size: 24px; font-weight:bold;">Bir İşim Var</span>
                </a>
			</div>
		</div>
		<div class="span4 columns" style="margin-left: 12%;">
			<div id="myCarousel" class="carousel">
				 
				<div class="carousel-inner">
				<div class="active item">
				    <img src="http://placekitten.com/400/350" />
				</div>
				<div class="item">
				    <img src="http://placedog.com/400/350" />
				</div>
				<div class="item">
				    <img src="http://placesheen.com/400/350" />
				</div>
				</div>
				
				<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
				<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
			</div>
