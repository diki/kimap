<!-- editor view template for general -->
<script type="text/template" id="widget-edit-template">
    <ul class="edit-widget-form">
    <% for(var i=0; i<fields.length; i++) { %>
        <% var field = fields[i] %>
        <li class="edit-widget-form-el">
                <label class="edit-widget-el">
                    <%= field.labelName %>
                </label>
        </li>
        <li>
        <% if(field.type=="text") { %>
            <input class="edit-widget-input" type="text" value="<%=field.content%>" model-attr="<%=field.modelAttr%>"/>
        <% } else if(field.type=="paragraph") { %>
            <textarea class="edit-widget-input" rows="5" cols="10" type="text" model-attr="<%=field.modelAttr%>"><%=field.content%></textarea>
        <% } %>
        </li>

    <% } %>
    <li class="edit-widget-cancel">
        <a href="" onclick="return false;">İptal</a> 
    </li>
    <li class="edit-widget-done">
        <a href="" onclick="return false;">Tamamlandı</a> 
    </li>
    </ul>
</script>

